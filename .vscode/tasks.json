{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "terraform apply all vault secrets",
            "type": "shell",
            "command": "terraform apply -input=false -auto-approve",
            "options": {
                "cwd": "${workspaceFolder}/vault-secrets.tmp/"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "generate jcasc jobs",
            "type": "shell",
            "command": "./generate_jcasc_pipeline.py .jenkins/*.Jenkinsfile > 093-jenkins-JCasC/manifests/jobs.yml",
            "options": {
                
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "test run many gh workflows",
            "type": "shell",
            "command": "./test_run_many_gh_workflows.sh",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "k9s",
            "type": "shell",
            "command": "k9s",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
    ]
}