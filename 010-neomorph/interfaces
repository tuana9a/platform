source /etc/network/interfaces.d/*

auto lo
iface lo inet loopback

iface enp2s0 inet manual

iface enp1s0 inet manual

iface wlp3s0 inet manual

auto vmbr1
iface vmbr1 inet static
	address 192.168.1.112/24
	gateway 192.168.1.1
	bridge-ports enp2s0
	bridge-stp off
	bridge-fd 0

auto vmbr56
iface vmbr56 inet static
	address 192.168.56.1/24
	bridge-ports none
	bridge-stp off
	bridge-fd 0
	post-up   echo 1 > /proc/sys/net/ipv4/ip_forward
	post-up   iptables -t nat -A POSTROUTING -s '192.168.56.0/24' -o vmbr1 -j MASQUERADE
	post-down iptables -t nat -D POSTROUTING -s '192.168.56.0/24' -o vmbr1 -j MASQUERADE
	post-down echo 0 > /proc/sys/net/ipv4/ip_forward
